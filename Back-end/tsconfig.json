{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "controllers/**/*",
        "middleware/**/*",
        "utils/**/*",
        "prisma/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}